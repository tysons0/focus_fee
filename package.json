{
  "name": "focus-fee-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n API,DESKTOP -c cyan,green \"npm run dev:api\" \"npm run dev:desktop\"",
    "dev:browser": "powershell -ExecutionPolicy Bypass -File run-dev.ps1",
    "dev:api": "node --experimental-strip-types server.ts",
    "dev:web": "npm run dev:web --prefix desktop",
    "dev:desktop": "npm --prefix desktop run dev",
    "build:electron": "npm --prefix desktop run build:electron",
    "build:desktop": "npm --prefix desktop run build",
    "deploy": "vercel --prod"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@solana/web3.js": "^1.98.4",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "@vercel/node": "^5.6.9",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3",
    "vercel": "^39.0.0"
  }
}
