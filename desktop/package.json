
{
  "name": "focus-fee-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n VITE,ESBUILD,ELECTRON -c blue,magenta,green \"vite\" \"node scripts/build-electron-watch.mjs\" \"wait-on tcp:5173 && cross-env VITE_DEV_SERVER=true VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build:renderer": "vite build",
    "build:electron": "node scripts/build-electron.mjs",
    "build": "npm run build:renderer && npm run build:electron",
    "start": "electron ."
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "active-win": "^8.1.1",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "electron": "^29.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.9.1",
    "typescript": "^5.4.0",
    "vite": "^5.1.3",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.focusfee.app",
    "files": [
      "dist/",
      "dist-electron/",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    }
  }
}
